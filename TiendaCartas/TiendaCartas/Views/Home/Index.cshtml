<div class="slideshow" id="Slide">
    <style>
        slideshow {
            
            position: absolute;
            margin-left: 500px;
            margin-bottom: 300px;
            display: block;
            overflow: scroll;
        }

        figure {
            position: absolute;
            opacity: 0;
            transition: 1s opacity;
        }

        figcaption {
            position:  ;
            font-family: sans-serif;
            font-size: .8em;
            top: 0;
            height: 25px;
            padding: .25em;
            color: #fff;
            background: rgba(0,0,0, .25);
            border-radius: 2px;
        }

            figcaption a {
                color: #fff;
            }

        figure.show {
            opacity: 1;
            position: static;
            transition: 1s opacity;
        }

        .next, .prev {
            color: #fff;
            position: page;
            background: rgba(0,0,0, .6);
            top: 50%;
            z-index: 1;
            font-size: 2em;
            margin-top: -.75em;
            opacity: .3;
            user-select: none;
            transition: 1s;
        }

            .next:hover, .prev:hover {
                cursor: pointer;
                opacity: 1;
            }

        .next {
            float: left;
            padding: 10px 5px 15px 10px;
            border-top-left-radius: 3px;
            border-bottom-left-radius: 3px;
        }

        .prev {
            left: 0;
            padding: 10px 10px 15px 5px;
            border-top-right-radius: 3px;
            border-bottom-right-radius: 3px;
        }

        p {
            margin: 10px 20px;
            color: #fff;
        }
        #Slide{
            margin-left: auto;
            margin-right: auto;
            width: 500px;
            height: 300px;
            
        }
    </style>

